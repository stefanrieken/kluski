# Variable number of args is supported for '+'
printnum (+ 1 2 3 4);

# And for '*'
printnum (* 2 3 4);

# This is half of 42:
printnum (eval { * (+ 1 2) (+ 3 4) });

# And this is all of it:
eval { printnum (+ (* 3 4) (* 5 6)) };

# General flexing:
define "greet" {
    args "who";
    eval {
        print "Hello, ";
        print who;
        print "!\n";
    }
};

greet "world";
